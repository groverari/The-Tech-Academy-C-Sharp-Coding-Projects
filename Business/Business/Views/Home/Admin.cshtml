<div class="row">
    <div class="card">
        <div class="card-header">
            <h3 class="text-primary">Employee Information</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("AddEmployee", "Home", FormMethod.Post))
            {

                <div class="row">
                    <div class="form-group col">
                        <input name="FirstName" type="text" placeholder="First Name" />
                    </div>
                    <div class="form-group col">
                        <input name="LastName" type="text" placeholder="Last Name" />
                    </div>
                    <div class="form-group col">
                        <input name="Position" type="text" placeholder="Position" />
                    </div>
                    <button type="submit" class="btn btn-block btn-primary col-3">Enter</button>
                </div>
            }
        </div>
    </div>
    
</div>
<div class="card">
<button type="submit" onclick="ViewCustomers()" class="btn btn-block btn-primary">View Customers</button>
</div>